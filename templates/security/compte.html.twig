{% extends 'base.html.twig' %}

{% block title %}My Shop{% endblock %}

{% block body %}
<body style="background-color: #FCF8F9;">

    <main style="margin-left:5%;margin-right: 5%;" >
        <h2  style="text-align: center">Mon compte</h2>

        <figure style="margin-top: 5%">

            {% for img in avatar %}
                {% if img.imageName %}
                    <a href="{{ path('avatar') }}"><img style="height: 200px; margin-left: 40%" src="{{ asset('images/uploads/') }}{{ img.imageName }}" alt=""></a>
                {% endif %}

            {% endfor %}

            <a href="{{ path('avatar') }}"><img style="height: 200px; margin-left: 40%" src="{{ asset('images/user.png') }}" alt="user"></a>






            <figcaption style="">
                <section class="sectionCompte" >



                    <p>Nom complet          : {{ app.user.nomComplet }}</p>

                    <p>Adresse mail         : {{ app.user.email }}</p>

                    <p>Pseudo               : {{ app.user.username }}</p>


                    <p>Date de naissance    : {{ app.user.dateNaissance|format_datetime('full','none', locale='fr') }}</p>

                    <p>Numero de telephone  : 0{{ app.user.numeroTelephone }}</p>

                </section>

            </figcaption>
        </figure>









    </main>
</body>
{% endblock %}
